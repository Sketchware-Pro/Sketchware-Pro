<body>
  <h1>BHARATH LIFE JOURNEY</h1>
  <h3>üé≤ Snake & Ladder Game üé≤</h3>
  <div id="board"></div>
  <p>üé≤ Dice: <span id="dice">-</span></p>
  <button onclick="rollDice()">Roll Dice</button>

  <script>
    const boardSize = 100;
    let position = 1;

    const snakes = {
      25: 5,
      40: 10,
      55: 30,
      70: 45,
      90: 60
    };

    const ladders = {
      5: 15,
      20: 35,
      35: 50,
      50: 65,
      75: 90,
      95: 99
    };

    function drawBoard() {
      let html = "<table>";
      for (let i = 10; i > 0; i--) {
        html += "<tr>";
        for (let j = 1; j <= 10; j++) {
          let cellNum = (i % 2 == 0) ? (10 * (10 - i) + j) : (10 * (10 - i) + (11 - j));
          html += `<td id="cell${cellNum}">${cellNum}</td>`;
        }
        html += "</tr>";
      }
      html += "</table>";
      document.getElementById("board").innerHTML = html;
      updatePosition();
    }

    function updatePosition() {
      for (let i = 1; i <= boardSize; i++) {
        document.getElementById(`cell${i}`).className = '';
      }
      document.getElementById(`cell${position}`).className = 'player';
    }

    function rollDice() {
      const roll = Math.floor(Math.random() * 6) + 1;
      document.getElementById("dice").textContent = roll;
      position += roll;
      if (position > boardSize) position = boardSize;

      // Check ladder
      if (ladders[position]) {
        alert("ü™ú You climbed a ladder!");
        position = ladders[position];
      }

      // Check snake
      if (snakes[position]) {
        alert("üêç Snake bite! You fall down...");
        position = snakes[position];
      }

      updatePosition();

      if (position === 100) {
        alert("üèÜ Congratulations! You completed Bharath Life Journey!");
        position = 1;
      }
    }

    drawBoard();
  </script>
</body>
</html>

