<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="87%"
            android:pivotY="140%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <stroke
                    android:width="10dp"
                    android:color="@color/transparent" />
                <solid android:color="#ff008dcd" />
            </shape>
        </rotate>
    </item>
</layer-list>