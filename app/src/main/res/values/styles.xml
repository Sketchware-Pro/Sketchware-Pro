<resources>

    <style name="AppTheme.CollapsingToolbar" parent="Widget.Material3.CollapsingToolbar.Large">
        <item name="collapsedTitleTextAppearance">@style/MaterialToolbarTextCollapsedAppearance
        </item>
        <item name="expandedTitleTextAppearance">@style/MaterialToolbarTextExpandedAppearance</item>
        <item name="titleCollapseMode">scale</item>
    </style>

    <style name="AppTheme.Design.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="subtitleTextAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="AppTheme.Check.White" parent="@style/Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/color_chk_white_highlight</item>
        <item name="colorControlNormal">@color/color_chk_white_normal</item>
    </style>

    <style name="CardViewStyle.White" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="CustomCollapsingCollapsed">
        <item name="android:textColor">@color/tool_bar_text_color</item>
    </style>

    <style name="CustomCollapsingExpanded">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">5dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">3dp</item>
    </style>

    <style name="DesignTabTextAppearance" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MainDrawer" parent="Widget.Material3.NavigationView">
        <item name="dividerInsetEnd">@dimen/main_drawer_horizontal_padding</item>
        <item name="dividerInsetStart">@dimen/main_drawer_horizontal_padding</item>
        <item name="itemHorizontalPadding">@dimen/main_drawer_horizontal_padding</item>
        <item name="itemIconPadding">@dimen/main_drawer_icon_padding</item>
        <item name="itemShapeInsetEnd">@dimen/main_drawer_shape_horizontal_inset</item>
        <item name="itemShapeInsetStart">@dimen/main_drawer_shape_horizontal_inset</item>
        <item name="itemTextAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="subheaderInsetEnd">@dimen/main_drawer_horizontal_padding</item>
        <item name="subheaderInsetStart">@dimen/main_drawer_horizontal_padding</item>
    </style>

    <style name="MainTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/main_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/main_tab_indicator_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/main_tab_selected_text_color</item>
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
    </style>

    <style name="MainTabTextAppearance" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_tab_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyPageTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/main_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/main_tab_indicator_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/main_tab_selected_text_color</item>
    </style>

    <style name="NumberPickerText" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/scolor_blue_01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHighlight">#ffeeeeee</item>
    </style>

    <style name="SoundProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">5dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/sound_progress_bar_horizontal</item>
        <item name="android:minHeight">3dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:bottomLeftRadius">14dp</item>
        <item name="android:bottomRightRadius">14dp</item>
        <item name="android:topLeftRadius">14dp</item>
        <item name="android:topRightRadius">14dp</item>
        <item name="hintEnabled">true</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <style name="InLayoutTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingHorizontal">0dp</item>
        <item name="boxStrokeColor">@color/input_layout_selector</item>
        <item name="android:textStyle">normal</item>
        <item name="android:bottomLeftRadius">14dp</item>
        <item name="android:bottomRightRadius">14dp</item>
        <item name="android:topLeftRadius">14dp</item>
        <item name="android:topRightRadius">14dp</item>
        <item name="hintEnabled">true</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/inputfields_corners_radius</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Input.Icon.Elevated">
        <item name="checkedIconEnabled">true</item>
        <item name="chipCornerRadius">90dp</item>
        <item name="checkedIconTint">?colorSurfaceBright</item>
        <item name="checkedIcon">@drawable/ic_done_24</item>
        <item name="android:textColor">?colorSurfaceBright</item>
        <item name="chipBackgroundColor">?colorPrimary</item>
        <item name="closeIconEnabled">false</item>
        <item name="closeIcon">@null</item>
        <item name="android:textAppearance">@style/chipText</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/gilroy</item>
        <item name="fontFamily">@font/gilroy</item>
    </style>

    <style name="MaterialToolbarTextExpandedAppearance" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/gilroy</item>
        <item name="android:fontFamily">@font/gilroy</item>
    </style>

    <style name="MaterialToolbarTextCollapsedAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/gilroy</item>
        <item name="android:fontFamily">@font/gilroy</item>
    </style>

    <style name="TextAppearance.Compat.Notification.Info.Media" parent="@style/TextAppearance.Compat.Notification.Info">
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
    </style>

    <style name="TextAppearance.Compat.Notification.Line2.Media" parent="@style/TextAppearance.Compat.Notification.Info.Media" />

    <style name="TextAppearance.Compat.Notification.Media" parent="@style/TextAppearance.Compat.Notification">
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
    </style>

    <style name="TextAppearance.Compat.Notification.Time.Media" parent="@style/TextAppearance.Compat.Notification.Time">
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
    </style>

    <style name="TextAppearance.Compat.Notification.Title.Media" parent="@style/TextAppearance.Compat.Notification.Title">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.SketchwarePro">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Translucent" parent="Theme.SketchwarePro">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Translucent.FullScreen" parent="Theme.SketchwarePro">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Design" parent="@style/Theme.AppCompat" />

    <style name="Theme.Design.BottomSheetDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
    </style>

    <style name="Theme.Design.Light" parent="@style/Theme.AppCompat.Light" />

    <style name="Theme.Design.Light.NoActionBar" parent="@style/Theme.Design.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Design.NoActionBar" parent="@style/Theme.Design">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IAPTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ThemeOverlay.ToolbarMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/design_menu_bg</item>
        <item name="android:textColor">@color/design_menu_text_color</item>
    </style>

    <style name="ToolbarTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tool_bar_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="progress">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="seekbarGreen" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="colorAccent">@color/scolor_green_01</item>
        <item name="colorControlNormal">#ffffffff</item>
        <item name="colorPrimaryDark">#ff03539a</item>
    </style>

    <style name="seekbarStyle" parent="@style/Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@drawable/seekbar_month_marker</item>
    </style>

    <style name="selectableMainItemBackground">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:colorControlHighlight">@color/color_control_normal</item>
    </style>

    <style name="AppTheme.Et" parent="Theme.SketchwarePro">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorPrimary">#ff212121</item>
        <item name="colorPrimaryDark">#ff000000</item>
    </style>

    <style name="AboutPageTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ViewEditorTheme" parent="Base.Theme.MaterialComponents.Light" />

    <!--  bottom sheet style  -->
    <style name="BottomSheetCardStyle" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/design_bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/design_bottom_sheet_slide_out</item>
    </style>

</resources>
