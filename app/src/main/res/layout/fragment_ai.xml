<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Search Pill -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#EAF1F8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_white_24dp"
                    app:tint="#444746"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search for projects..."
                    android:textColor="#444746"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_launcher" 
                    app:tint="#444746"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conversations"
            android:textSize="28sp"
            android:textColor="#191C1E"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <!-- New Conversation Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_new_conversation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="New Conversation"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:backgroundTint="#00658B"
            android:layout_marginBottom="24dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_sessions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_conversation_card"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
