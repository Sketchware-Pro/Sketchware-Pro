<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- AI Introduction Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_robot"
            android:tint="?attr/colorPrimary"/>
            
        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I've created your project:"
            android:padding="12dp"
            android:background="@drawable/bg_chat_bubble_ai"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Project Card -->
    <com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#F0F0F0"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_project_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_helper_code"
                app:tint="#004D66" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/text_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/text_project_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="com.example.project"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textColor="#004D66"
                android:textStyle="bold"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="#004D66"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
