<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:duration="0"
        android:propertyName="alpha"
        android:valueFrom="1"
        android:valueTo="0" />
    <objectAnimator
        android:duration="@integer/flip_time_full"
        android:interpolator="@android:interpolator/accelerate_decelerate"
        android:propertyName="rotationX"
        android:valueFrom="180"
        android:valueTo="0" />
    <objectAnimator
        android:duration="1"
        android:propertyName="alpha"
        android:startOffset="@integer/flip_time_half"
        android:valueFrom="0"
        android:valueTo="1" />
</set>